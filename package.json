{
  "name": "playwright-testing-framework",
  "version": "2.0.0",
  "description": "Modern Playwright testing framework with enhanced architecture and utilities",
  "main": "index.js",
  "scripts": {
    "prepare": "husky install",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --config .prettierrc 'tests/**/*.ts' --write",
    "format:check": "prettier --config .prettierrc 'tests/**/*.ts' --check",
    "test": "npx playwright test --project=chromium",
    "test:all": "npx playwright test",
    "test:headed": "npx playwright test --headed --project=chromium",
    "test:debug": "npx playwright test --debug --project=chromium",
    "test:ui": "npx playwright test --ui",
    "test:chromium": "npx playwright test --project=chromium",
    "test:firefox": "npx playwright test --project=firefox",
    "test:webkit": "npx playwright test --project=webkit",
    "test:mobile": "npx playwright test --project='Mobile Chrome' --project='Mobile Safari'",
    "test:smoke": "npx playwright test --grep '@smoke'",
    "test:api": "npx playwright test --grep '@api'",
    "test:env:dev": "ENVIRONMENT=dev npx playwright test",
    "test:env:staging": "ENVIRONMENT=staging npx playwright test",
    "test:env:prod": "ENVIRONMENT=prod npx playwright test",
    "report:html": "npx playwright show-report playwright-report/html",
    "report:allure": "npm run allure:generate && npm run allure:open",
    "allure:generate": "npx allure generate allure-results --clean",
    "allure:open": "npx allure open ./allure-report",
    "trace:show": "npx playwright show-trace trace.zip",
    "codegen": "npx playwright codegen",
    "posttest": "npm run allure:generate"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run lint && yarn run format"
    }
  },
  "keywords": [
    "playwright",
    "testing",
    "automation",
    "e2e",
    "test-framework"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.47.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "husky": "^9.1.5",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4",
    "eslint-config-prettier": "^9.1.0",
    "@types/node": "^22.5.4",
    "allure-playwright": "^3.0.0",
    "allure-commandline": "^2.30.0",
    "eslint-plugin-no-loops": "^0.4.0",
    "eslint-plugin-prettier": "^5.2.1",
    "@axe-core/playwright": "^4.10.0"
  }
}